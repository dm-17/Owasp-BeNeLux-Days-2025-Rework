<footer>
  {% assign goldSponsors = site.data.sponsors | where:"level","Gold" | sort: 'name' %}
  {% assign silverSponsors = site.data.sponsors | where:"level","Silver" | sort: 'name' %}
  {% assign bronzeSponsors = site.data.sponsors | where:"level","Bronze" | sort: 'name' %}
  {% assign socialEventSponsors = site.data.sponsors | where:"level","Social event" | sort: 'name' %}

  {% if goldSponsors.size > 0 or silverSponsors.size > 0 or bronzeSponsors.size > 0 or socialEventSponsors.size > 0 %}
  <div class="strike">
    <span>Sponsors</span>
  </div>
 
  {% if goldSponsors.size > 0 %}
    <h2>Gold sponsors</h2>
    {% for sponsor in goldSponsors %}
      <div class="sponsor" style="{{ sponsor.style }}">
      	<a href="{{ sponsor.url }}" target="_blank">
	  {% if sponsor.image %}
	  <img src="{{ site.baseurl }}/assets/images/sponsors/{{sponsor.image}}" alt="{{ sponsor.name }} logo" style="{{ sponsor.style }}"/>
	  {% else %}
	  {{ sponsor.name }}
	  {% endif %}
	</a><br />
      </div>
    {% endfor %}
  {% endif %}

  {% if silverSponsors.size > 0 %}
    <h2>Silver sponsors</h2>
    {% for sponsor in silverSponsors %}
      <div class="sponsor" style="{{ sponsor.style }}">  
      	<a href="{{ sponsor.url }}" target="_blank">
	  {% if sponsor.image %}
	  <img src="{{ site.baseurl }}/assets/images/sponsors/{{sponsor.image}}" alt="{{ sponsor.name }} logo" style="{{ sponsor.style }}"/>
	  {% else %}
	  {{ sponsor.name }}
	  {% endif %}
	</a><br />
      </div>
    {% endfor %}
  {% endif %}

  {% if bronzeSponsors.size > 0 %}
    <h2>Bronze sponsors</h2>
    {% for sponsor in bronzeSponsors %}
      <div class="sponsor" style="{{ sponsor.style }}">
      	<a href="{{ sponsor.url }}" target="_blank">
	  {% if sponsor.image %}
	  <img src="{{ site.baseurl }}/assets/images/sponsors/{{sponsor.image}}" alt="{{ sponsor.name }} logo" style="{{ sponsor.style }}"/>
	  {% else %}
	  {{ sponsor.name }}
	  {% endif %}
	</a><br />
      </div>
    {% endfor %}
  {% endif %}

  {% if socialEventSponsors.size > 0 %}
    <h2>Social Event sponsor</h2>
    {% for sponsor in socialEventSponsors %}
      <div class="sponsor" style="{{ sponsor.style }}">
      	<a href="{{ sponsor.url }}" target="_blank">
	  {% if sponsor.image %}
	  <img src="{{ site.baseurl }}/assets/images/sponsors/{{sponsor.image}}" alt="{{ sponsor.name }} logo" style="{{ sponsor.style }}"/>
	  {% else %}
	  {{ sponsor.name }}
	  {% endif %}
	</a><br />
      </div>
    {% endfor %}
  {% endif %}

  <div class="strike">
    <span>Sponsors</span>
  </div>
  {% endif %}

  <div>&copy; OWASP Foundation 2025</div>
</footer>
</body>
</html>
